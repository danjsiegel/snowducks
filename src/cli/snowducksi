#!/usr/bin/env python3
"""
SnowDucks CLI - Instant SQL for Snowflake with DuckLake Caching
"""

import sys
import os

# Use the virtual environment Python if available (venv is in current directory)
venv_python = os.path.join(os.path.dirname(os.path.abspath(__file__)), 'venv', 'bin', 'python')
if os.path.exists(venv_python):
    # Replace the current process with the venv Python
    os.execv(venv_python, [venv_python] + sys.argv)

# Add the cli directory to the Python path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from snowducks.cli import main

if __name__ == "__main__":
    main() 